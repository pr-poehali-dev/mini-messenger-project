{
  "tests": [
    {
      "name": "Login with valid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "login": "Роман",
        "password": "22"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true,
        "user": {
          "login": "string",
          "is_admin": true
        }
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "Login with invalid credentials",
      "method": "POST",
      "path": "/",
      "body": {
        "action": "login",
        "login": "wrong",
        "password": "wrong"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "success": false
      },
      "bodyMatcher": "partial"
    }
  ]
}
